<%- include("partials/header.ejs") %>
<main>
  <h3>Write your blog post below.</h3>
  <form action="/posts/new" method="post">
    <label for="textBox" hidden>Post </label>
    <input
      type="text"
      name="textBox"
      id="textBox"
      class="my-text-box"
      placeholder="Title goes here."
      required
    />
    <input
      type="text"
      name="textBox-body"
      id="textBox-body"
      class="my-text-box-body"
      placeholder="Content goes here."
      required
    />
    <br />
    <input type="submit" value="Submit" />
  </form>
  <br />
  <a href="/">Homepage</a>
</main>
<%- include("partials/footer.ejs") %>
